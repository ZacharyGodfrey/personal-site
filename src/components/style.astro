<style is:global>
@font-face {
	font-family: 'satisfy';
	src: url('/satisfy.ttf');
}

@font-face {
	font-family: 'fira';
	src: url('/fira-code-variable.ttf');
}

/* Pseudo Elements */

:root {
	--text:       hsl(0, 0%, 10%);
	--background: hsl(0, 0%, 98%);
	--accent:     hsl(205, 75%, 50%);
	--highlight:  hsl(205, 75%, 75%);
	--content-width: 50rem;
	--margin: 2rem;
	--padding: 1rem;
	font-size: 16px;
	font-family: 'fira', monospace;
	color: var(--text);
	background: var(--background);
}

* {
	position: relative;
	box-sizing: border-box;
	margin: 0;
}

:first-child { margin-block-start: 0 !important; }
:last-child  {   margin-block-end: 0 !important; }

::selection {
	color: var(--text);
	background: var(--highlight);
}

/* Layout */

html, body {
	margin: 0;
	padding: 0;
	min-height: 100vh;
	min-height: 100svh;
}

body {
	display: flex;
	flex-direction: column;
}

main {
	flex: 1;
}

header {
	padding: var(--padding);
	border-bottom: 1px solid var(--text);
}

article {
	padding: calc(4 * var(--padding)) var(--padding);
}

section {
	max-width: var(--content-width);
	margin-inline: auto;
}

footer {
	padding: calc(4 * var(--padding)) var(--padding);
	border-top: 1px solid var(--text);
}

/* Elements */

h1, h2, h3, h4, h5, h6, p, ul, ol, img, pre, blockquote, hr, table, .card {
	margin-block: var(--margin);
}

p, li, th, td {
	line-height: 1.6;
}

h1, h2, h3, h4, h5, h6 {
	line-height: 1.2;
}

h1 { font-size: 2.5rem; }
h2 { font-size: 2.5rem; }
h3 { font-size: 1.75rem; }
h4, h5, h6 { font-size: 1rem; }

h1 {
	letter-spacing: 1px;
	font-weight: normal;
	font-family: 'satisfy', sans-serif;
}

h2 {
	text-shadow:
		-1px -1px var(--dark),
		1px -1px var(--dark),
		-1px 1px var(--dark),
		1px 1px var(--dark),
		-4px 4px var(--accent);
}

a {
	color: inherit;
	text-decoration: underline;
	text-decoration-color: var(--accent);
	text-decoration-thickness: 2px;
}

a:not(h1 a):hover {
	color: var(--accent);
}

button, a.button {
	display: inline-block;
	padding: 0.5rem 1rem;
	border-radius: 0.25rem;
	color: var(--dark);
	background: var(--accent);
	border: 1px solid var(--dark);
	font-size: 1rem;
	font-weight: normal;
	text-align: center;
	text-decoration: none;
	font-family: 'fira', monospace;
	font-size: 1rem;
	line-height: inherit;
	filter: drop-shadow(-4px 4px hsla(0, 0%, 0%, 25%));
	cursor: pointer;
}

button:hover, a.button:hover {
	color: var(--accent);
	background: var(--main);
	border: 1px solid var(--accent);
}

button + button, button + a.button,
a.button + button, a.button + a.button {
	margin-inline-start: 1rem;
}

th, strong {
	font-weight: bold;
}

em {
	font-style: italic;
}

code {
	font-family: 'fira', monospace;
}

p > code {
	display: inline-block;
	padding: calc(var(--padding) / 4);
	background: var(--dark);
	border-radius: var(--radius);
}

pre, blockquote {
	padding: var(--padding);
}

pre {
	font-size: 1rem;
	/* border-block: 1px solid var(--text); */
}

blockquote {
	border-inline-start: 0.25rem solid var(--accent);
}

ul, ol {
	padding: 0;
	list-style-position: inside;
}

li {
	margin-block: calc(var(--margin) / 2);
}

li:has(input[type="checkbox"]:disabled) {
	list-style-type: none;
}

img {
	display: block;
	margin-inline: auto;
	max-width: min(100%, 40rem);
	max-height: min(75vh, 40rem);
	max-height: min(75svh, 40rem);
	user-select: none;
	border-radius: var(--radius);
}

hr {
	width: 100%;
	height: 1px;
	border: none;
	outline: none;
	background: var(--text);
}

table, th, td {
	border-collapse: collapse;
}

table {
	width: 100%;
	border: 1px solid var(--text);
}

th, td {
	padding: calc(var(--padding) / 2);
	border: 1px solid var(--text);
}

thead tr:not(:has(th:not(:empty))) {
	display: none;
}

/* Component Classes */

.card {
	padding: var(--padding);
	border-radius: var(--radius);
	color: var(--dark);
	background: white;
	filter: drop-shadow(-4px 4px hsla(0, 0%, 0%, 25%));
}

/* Helper Classes */

.text-center { text-align: center; }
.text-right { text-align: right; }
.text-fancy { font-family: 'satisfy', sans-serif; }

/* Specific Styles */

img[alt="hero"] {
	border: 2px solid var(--accent);
	border-radius: 50%;
	max-width: 12rem;
	filter: sepia(50%);
}
</style>